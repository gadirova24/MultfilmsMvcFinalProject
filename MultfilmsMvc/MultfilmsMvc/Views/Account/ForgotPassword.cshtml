@model ForgotPasswordVM
<section id="login">
    <div class="container">
        <div class="title">
            <h2>Восстановить пароль</h2>
        </div>
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form">

                <label for="name">Ваш Email :</label>
                <input asp-for="Email" class="form-input"autocomplete="off">
                <span asp-validation-for="Email" class="text-danger"></span>

                <button type="submit" class="btn register-btn mt-3">Отправить</button>
            </div>
        </form>
    </div>
</section>
