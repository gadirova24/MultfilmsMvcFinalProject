@model RegisterVM
<section id="register">
    <div class="container">
        <div class="title">
            <h2>Регистрация</h2>
        </div>
        <div class="form">
            <form method="post" asp-action="Register" name="frm-login">
                <label for="fid-name">Имя Фамилия:<span class="requite" style="color:#eb4e4b">*</span></label>
                <input asp-for="FullName" id="fid-name" class="form-input"autocomplete="off">
                <span asp-validation-for="FullName" class="text-danger d-block mt-1"
                      style="text-align:left !important"></span>

                <label for="fid-name">Имя пользователя<span class="requite" style="color:#eb4e4b">*</span></label>
                <input asp-for="UserName" id="fid-name" class="form-input"autocomplete="off">
                <span asp-validation-for="UserName" class="text-danger d-block mt-1"
                      style="text-align:left !important"></span>


                <label for="fid-name">Email:<span class="requite" style="color:#eb4e4b">*</span></label>
                <input asp-for="Email" id="fid-name" class="form-input"autocomplete="off">
                <span asp-validation-for="Email" class="text-danger d-block mt-1"
                      style="text-align:left !important"></span>


                <label for="fid-pass">Пароль:<span class="requite" style="color:#eb4e4b">*</span></label>
                <input asp-for="Password" id="fid-pass"type="password" class="form-input"autocomplete="off">
                <span asp-validation-for="Password" class="text-danger d-block mt-1"
                      style="text-align:left !important"></span>

                <label for="fid-name">Повторите пароль:<span class="requite" style="color:#eb4e4b">*</span></label>
                <input asp-for="ConfirmPassword" id="fid-name"type="password" class="form-input"autocomplete="off">
                <span asp-validation-for="ConfirmPassword" class="text-danger d-block mt-1"
                      style="text-align:left !important"></span>


                <button type="submit" class="btn register-btn">Отправить </button>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </form>

        </div>


    </div>
</section>

