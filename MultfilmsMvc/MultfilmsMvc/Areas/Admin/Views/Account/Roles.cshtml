@model IEnumerable<RoleVM>

<div class="container-fluid pt-5" style="width:60%">
    <h1>Roles List</h1>

    <table class="table table-bordered mt-5">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Users</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        @if (role.Users != null && role.Users.Any())
                        {
                            @string.Join(", ", role.Users.Select(u => u.FullName + " (" + u.UserName + ")"))
                        }
                        else
                        {
                            <em>No users with this role</em>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
