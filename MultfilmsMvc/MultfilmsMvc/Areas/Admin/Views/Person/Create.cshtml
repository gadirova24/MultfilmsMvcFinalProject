@model PersonCreateVM
<div class="container mt-5" style="width:60%">
    <form class="forms-sample" method="post" asp-action="Create">
        <div class="form-group">
            <label for="name">FullName</label>
            <input type="text" class="form-control" id="name" asp-for="FullName">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
       
    <div class="form-group">
        <label for="roles">Role</label>
        <select asp-for="SelectedRole" class="form-control" asp-items="Model.RoleOptions">
            <option value="">Select one option</option>
        </select>
        <span asp-validation-for="SelectedRole" class="text-danger"></span>
    </div>
        <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>

</div>
