@model PersonDetailVM

<div class="container-fluid pt-5" style="width:60%">

    <table class="table table-bordered mt-5">
        <thead>
            <tr>
                <th> FullName </th>
                <th> Role </th>
                <th> CartoonCount </th>
                <th> CartooNames </th>

            </tr>
        </thead>
        <tbody>

            <tr>
                <td>@Model.FullName</td>
                <td>@string.Join(", ", Model.Roles)</td>
                <td>@Model.CartoonCount</td>
                <td>
                    @string.Join(", ", Model.CartoonNames)
                </td>

            </tr>


        </tbody>
    </table>
</div>