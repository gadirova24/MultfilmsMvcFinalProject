@model CountryEditVM
<div class="container mt-5" style="width:60%">
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">

        <div class="form-group">
            <img src="~/assets/images/countries/@Model.ExistImage" style="width:200px;height:100px ;margin-bottom:10px" />
            <label for="Image"></label>
            <input class="form-control" id="name" asp-for="UploadImage">
            <span asp-validation-for="UploadImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="name"> Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>

</div>