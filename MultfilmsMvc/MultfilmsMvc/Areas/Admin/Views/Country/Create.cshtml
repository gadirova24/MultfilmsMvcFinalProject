@model CountryCreateVM

<div class="container mt-5" style="width:60%">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">

        <div class="form-group">
            <label for="name">Image</label>
            <input class="form-control" id="name" asp-for="Image" type="file">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" id="name" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    


        <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>

</div>